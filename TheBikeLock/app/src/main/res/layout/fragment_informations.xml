<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="560dp"
    android:background="@color/colorPrimary"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".controller.MainActivity">

    <TextView
        android:id="@+id/textView_sigfoxDD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Données Sigfox"
        android:textColor="@color/colorButton"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_latitudeD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_sigfoxD"
        android:layout_alignStart="@+id/textView_sigfoxD"
        android:layout_marginTop="7dp"
        android:text="Latitude"
        android:textColor="@color/colorButton"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_latitudeD"
        android:layout_alignStart="@+id/textView_sigfoxD"
        android:layout_marginTop="5dp"
        android:text="Hex : "
        android:textColor="@color/colorButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_latitude1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_latitude"
        android:layout_alignStart="@+id/textView_sigfoxD"
        android:layout_marginTop="5dp"
        android:text="Dec : "
        android:textColor="@color/colorButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_latitude2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_latitude1"
        android:layout_alignStart="@+id/textView_sigfoxD"
        android:layout_marginTop="5dp"
        android:text="Dec - 90 : "
        android:textColor="@color/colorButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView_sigfoxD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Données Sigfox"
        android:textColor="@color/colorButton"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_longitudeD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_latitude2"
        android:layout_alignStart="@+id/textView_sigfoxD"
        android:layout_marginTop="20dp"
        android:text="Longitude"
        android:textColor="@color/colorButton"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_longitudeD"
        android:layout_alignStart="@+id/textView_sigfoxD"
        android:layout_marginTop="5dp"
        android:text="Hex : "
        android:textColor="@color/colorButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_longitude1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_longitude"
        android:layout_alignStart="@+id/textView_sigfoxD"
        android:layout_marginTop="5dp"
        android:text="Dec : "
        android:textColor="@color/colorButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_longitude2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_longitude1"
        android:layout_alignStart="@+id/textView_sigfoxD"
        android:layout_marginTop="5dp"
        android:text="Dec - 90 : "
        android:textColor="@color/colorButton"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/textView_nfc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_longitude2"
        android:layout_marginTop="40dp"
        android:text="Données NFC"
        android:textColor="@color/colorButton"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/textView_nfc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_nfc1"
        android:layout_alignStart="@+id/textView_sigfoxDD"
        android:layout_marginTop="7dp"
        android:text="Pour obtenir les informations NFC taguer une carte"
        android:textColor="@color/colorButton"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/button_nfc_data"
        android:layout_width="69dp"
        android:layout_height="41dp"
        android:layout_below="@+id/textView_nfc"
        android:layout_alignStart="@+id/textView_nfc"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="174dp"
        android:background="@drawable/shape_circle_button"
        android:backgroundTint="@color/colorTest"
        android:text="NFC Data"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/textView_baterie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_nfc"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp"
        android:text="Données Baterie"
        android:textColor="@color/colorButton"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_pourc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_baterie"
        android:layout_alignStart="@+id/textView_sigfoxD"
        android:layout_marginTop="7dp"
        android:text="Pourcentage : "
        android:textColor="@color/colorButton"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent" />

</RelativeLayout>